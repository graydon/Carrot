;;; Constructors ;;;

(= (cons a (List a) (List a)) x xs f
   (f x xs))
(= (nil (List a)) 'nil)

(= (make-integers-from Number (List Number)) n
   (cons n (make-integers-from (+ n 1))))
(= (integers (List Number))
   (make-integers-from 0))




;;; Selectors ;;;

(= (car (List a) a) xs
   (xs (^ h t h)))


(= (cdr (List a) (List a)) xs
   (xs (^ h t t)))


(= (list-ref (List a) a) xs i
  (nil? xs false
    (=? i 0 (car xs) (list-ref (cdr xs) (- i 1)))))


(= (take (List a) Number (List a)) xs n
  (nil? xs nil
    (=? n 0 nil
      (cons (car xs) (take (cdr xs) (- n 1))))))


(= (drop (List a) Number (List a)) xs i
  (nil? xs false
    (=? i 0 xs (drop (cdr xs) (- i 1)))))


(= (take-right (List a) Number (List a)) xs i
  (drop xs (- (length xs) i)))


(= (drop-right (List a) Number (List a)) xs i
  (take xs (- (length xs) i)))


(= (split-at (List a) Number (Tuple a a)) xs i
  (2-tuple (take xs i) (drop xs i)))


(= (last (List a) a) xs
  (nil? (cdr xs) (car xs) (last (cdr xs))))




;;; Miscellaneous ;;;

(= (length (List a) Number) xs
   (nil? xs 0 (+ 1 (length (cdr xs)))))


(= (append (List a) (List a) (List a)) xs1 xs2
  (nil? xs1 xs2
    (cons (car xs1) (append (cdr xs1) xs2))))


(= (reverse (List a) (List a)) xs
  (fold xs (^ x ac (cons x ac)) nil))


(= (zip (List a) (List b) (List (Tuple a b))) xs1 xs2
  (nil? xs1 nil
    (nil? xs2 nil
      (cons (2-tuple (car xs1) (car xs2))
        (zip (cdr xs1) (cdr xs2))))))


(= (zipWith (List a) (Fn a b c) (List b) (List c)) xs1 f xs2
  (nil? xs1 nil
    (nil? xs2 nil
      (cons (f (car xs1) (car xs2))
        (zipWith (cdr xs1) f (cdr xs2))))))


;;(= unzip xs (unzip- nil nil (reverse xs)))


#|(= unzip- xs1 xs2 zipped
  (nil? zipped
    (2-tuple xs1 xs2)
    (unzip-
      (cons (fst (car zipped)) xs1)
      (cons (snd (car zipped)) xs2)
      (cdr zipped))))|#


(= (count1 (List a) (Fn a Bool) Number) xs pred
  (nil? xs 0
    (pred (car xs) (+ 1 (count1 (cdr xs) pred))
      (count1 (cdr xs) pred))))


(= (count2 (List a) (List b) (Fn a b Bool) Number)
  xs1 xs2 pred
  (nil? xs1 0
    (nil? xs2 0
      (pred (car xs1) (car xs2) (+ 1 (count2 (cdr xs1) (cdr xs2) pred))
        (count2 (cdr xs1) (cdr xs2) pred)))))




;;; Fold, unfold & map ;;;

(= (fold (List a) (Fn a b c) b c) xs f init
  (nil? xs init
    (fold (cdr xs) f (f (car xs) init))))


(= (fold-right (List a) (Fn a b c) b c) xs f init
  (nil? xs init
    (f (car xs) (fold-right (cdr xs) f init))))


#|(= unfold p f g seed
  (p seed nil
    (cons (f seed) (unfold p f g (g seed)))))|#


;(= unfold-right ) ;pending


(= (map (List a) (Fn a b) (List b)) xs f
  (nil? xs nil (cons (f (car xs)) (map (cdr xs) f))))




;;; Filtering & partitioning ;;;

(= (filter (List a) (Fn a Bool) (List a)) xs f
  (nil? xs nil
    (f (car xs) (cons (car xs) (filter (cdr xs) f)) (filter (cdr xs) f))))


;(= partition xs (partition- nil nil (reverse xs)))


#|
(= partition- acc1 acc2 xs p
  (nil? xs (2-tuple acc1 acc2)
    (p (car xs)
      (partition- (cons (car xs) acc1) acc2 (cdr xs) p)
      (partition- acc1 (cons (car xs) acc2) (cdr xs) p))))
|#

(= (remove (List a) (Fn a Bool) (List a)) xs f
  (nil? xs nil
    (f (car xs) (remove (cdr xs) f) (cons (car xs) (remove (cdr xs) f)))))




;;; Searching ;;;

(= (find (List a) (Fn a Bool) a) xs pred
  (nil? xs false
    (pred (car xs) (car xs)
      (find (cdr xs) pred))))


(= (find-tail (List a) (Fn a Bool) a) xs pred
  (nil? xs false
    (pred (car xs) xs
      (find-tail (cdr xs) pred))))


(= (take-while (List a) (Fn a Bool) (List a)) xs pred
  (nil? xs nil
    (pred (car xs) (cons (car xs) (take-while (cdr xs) pred)) nil)))


(= (drop-while (List a) (Fn a Bool) (List a)) xs pred
  (nil? xs nil
    (pred (car xs) (drop-while (cdr xs) pred) xs)))


(= (any? (List a) (Fn a Bool) Bool) xs pred
  (nil? xs false
    (pred (car xs) true (any? (cdr xs) pred))))


(= (every? (List a) (Fn a Bool) Bool) xs pred
  (nil? xs true
    (pred (car xs) (every? (cdr xs) pred) false)))


(= (list-index (List a) (Fn a Bool) Number) xs pred
  (nil? xs false
    (pred (car xs) 0
      (+ 1 (list-index (cdr xs) pred)))))


(= (member (List a) a (List a)) xs x
  (nil? xs nil
    (=? (car xs) x xs (member (cdr xs) x))))


(= (delete (List a) a (List a)) xs x
  (nil? xs nil
    (=? (car xs) x
      (delete (cdr xs) x)
      (cons (car xs) (delete (cdr xs) x)))))


(= (delete-duplicates (List a) (List a)) xs
  (nil? xs nil
    (cons (car xs) (delete-duplicates (delete xs (car xs))))))




;;; Association lists ;;;

(= (assoc (List (Tuple a b)) a (Tuple a b)) axs key
  (nil? axs false
    (=? (fst (car axs)) key (car axs)
      (assoc (cdr axs) key))))


(= (alist-cons a b (List (Tuple a b))) key datum axs
  (cons (2-tuple key datum) axs))


(= (alist-copy (List (Tuple a b)) (List (Tuple a b))) axs
  (nil? axs nil
    (cons (2-tuple (fst (car axs)) (snd (car axs)))
      (alist-copy (cdr axs)))))


(= (alist-delete (List (Tuple a b)) a (List (Tuple a b))) axs key
  (remove axs (compose (=? key) fst)))




;;; predicate ;;;

(= (list-eq? (List a) (List a) Bool) xs1 xs2
  (nil? xs1 (nil? xs2 true false)
    (=? (car xs1) (car xs2) (list-eq (cdr xs1) (cdr xs2))
      false)))



;;; suffix functions ;;;
(= (prefix (Fn (List a) b) (List a) b) f h t (f (cons h t)))

#|
(= -cons h t _h (cons _h (cons h t)))
(= -car               (prefix car))
(= -cdr               (prefix cdr))
(= -list-ref          (prefix list-ref))
(= -take              (prefix take))
(= -drop              (prefix drop))
(= -take-right        (prefix take-right))
(= -drop-right        (prefix drop-right))
(= -split-at          (prefix split-at))
(= -last              (prefix last))
(= -length            (prefix length))
(= -append            (prefix append))
(= -concatenate       (prefix concatenate))
(= -reverse           (prefix reverse))
(= -zip               (prefix zip))
(= -unzip             (prefix unzip))
(= -zipWith           (prefix zipWith))
(= -count1            (prefix count1))
(= -count2            (prefix count2))
(= -fold              (prefix fold))
(= -fold-right        (prefix fold-right))
(= -map               (prefix map))
(= -filter            (prefix filter))
(= -partition         (prefix partition))
(= -remove            (prefix remove))
(= -find              (prefix find))
(= -find-tail         (prefix find-tail))
(= -take-while        (prefix take-while))
(= -drop-while        (prefix drop-while))
(= -any?              (prefix any?))
(= -every?            (prefix every?))
(= -list-index        (prefix list-index))
(= -member            (prefix member))
(= -delete            (prefix delete))
(= -delete-duplicates (prefix delete-duplicates))
(= -assoc             (prefix assoc))
(= -alist-copy        (prefix alist-copy))
(= -alist-delete      (prefix alist-delete))
|#
